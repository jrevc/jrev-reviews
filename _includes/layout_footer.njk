{% set footerReviewCounter = 0 %}
  <footer>
    <div class="wrapper">
      <div class="footer__brand">
        <a href="{{ homepage.data.nav.url }}">
          <img src="/images/logo-white.svg">
          <p>jRev Reviews</p>
        </a>
        <ul>
          <li>jrevita@gmail.com</li>
          <li>reviews.jrevita.com</li>
        </ul>
      </div>
      <div class="footer__reviews">
        <h5>Recent Reviews</h5>
        <ul>
          {% for review in collections.reviews %}
            {% if footerReviewCounter < 6 %}
              <li><a href="{{ review.url }}">
                <div class="footer__reviews-title">{{ review.data.title }}</div>
                <div class="footer__reviews-author">{{ review.data.author }}</div>
              </a></li>
              {% set footerReviewCounter = footerReviewCounter + 1 %}
            {% endif %}
          {% endfor %}
        </ul>
      </div>
      <div class="footer__links">
        {% include "blocks/main_nav.njk" %}
      </div>
    </div>
  </footer>

  <script>
    let menuButton = document.querySelector(".header__logo .menu")
    let menu = document.querySelector("header nav ul")

    const toggleMenu = () => {
      menu.classList.toggle("active")
    }

    menuButton.addEventListener("click", toggleMenu, this)
  </script>
</body>
</html>